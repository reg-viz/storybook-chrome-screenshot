{
  "name": "storybook-chrome-screenshot",
  "version": "1.1.0-alpha.1",
  "description": "A Storybook addon, Save the screenshot image of your stories! via puppeteer.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "storybook-chrome-screenshot": "lib/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "npm run test:lint && npm run test:unit && npm run test:e2e",
    "test:lint": "tslint \"src/**/*.ts\" \"src/**/*.tsx\"",
    "test:unit": "jest",
    "test:e2e": "bash scripts/e2e.sh",
    "test:watch": "npm run test:unit -- --watch",
    "clean": "rm -rf lib",
    "prebuild": "npm run clean",
    "prescreenshot": "npm run build",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tsuyoshiwada/storybook-chrome-screenshot.git"
  },
  "author": "tsuyoshiwada",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tsuyoshiwada/storybook-chrome-screenshot/issues"
  },
  "homepage": "https://github.com/tsuyoshiwada/storybook-chrome-screenshot#readme",
  "files": [
    "lib",
    "CHANGELOG.md",
    "README.md",
    "LICENSE",
    "package.json",
    "register.js"
  ],
  "keywords": [
    "storybook",
    "addon",
    "puppeteer",
    "chrome",
    "screenshot",
    "capture",
    "visual-testing"
  ],
  "devDependencies": {
    "@storybook/addon-backgrounds": "^3.4.2",
    "@storybook/addon-knobs": "^3.4.2",
    "@storybook/react": "^3.4.2",
    "@types/enzyme": "^3.1.10",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/jest": "^22.2.3",
    "@types/node": "^9.6.6",
    "@types/react": "16.3.12",
    "@types/react-dom": "^16.0.5",
    "babel-core": "^6.26.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "jest": "^22.4.3",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-test-renderer": "^16.3.2",
    "tslint": "^5.9.1",
    "tslint-react": "^3.5.1",
    "typescript": "^2.8.3"
  },
  "dependencies": {
    "@types/commander": "^2.12.2",
    "@types/imagesloaded": "^4.1.1",
    "@types/lodash": "^4.14.107",
    "@types/log-symbols": "^2.0.0",
    "@types/mkdirp": "^0.5.2",
    "@types/node-emoji": "^1.8.0",
    "@types/progress": "^2.0.1",
    "@types/puppeteer": "^1.2.1",
    "@types/query-string": "^5.1.0",
    "@types/sanitize-filename": "^1.1.28",
    "@types/storybook__react": "^3.0.7",
    "babel-polyfill": "^6.26.0",
    "chalk": "^2.4.0",
    "commander": "^2.15.1",
    "imagesloaded": "^4.1.4",
    "is-ci": "^1.1.0",
    "lodash": "^4.17.5",
    "log-symbols": "^2.2.0",
    "mkdirp": "^0.5.1",
    "node-emoji": "^1.8.1",
    "progress": "^2.0.0",
    "puppeteer": "^1.3.0",
    "query-string": "^6.0.0",
    "sanitize-filename": "^1.6.1",
    "util-inspect": "^0.1.8"
  },
  "peerDependencies": {
    "@storybook/addons": ">=3.1.0",
    "react": ">=15.0.0 || ^16.0.0-alpha",
    "react-dom": ">=15.0.0 || ^16.0.0-alpha"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/jest/setupTests.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/jest/preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.test.(ts|tsx)"
    ]
  }
}
